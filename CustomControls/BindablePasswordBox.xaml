<UserControl x:Class="gerenciamento_NET_wpf.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gerenciamento_NET_wpf.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <PasswordBox x:Name="txtpassword"
                             FontSize="16"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="#005587"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"
                             Padding="24,5,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/gerenciamento_NET_wpf;component/images/Key (4).png"
                                        Stretch="None"
                                        AlignmentX="Left"
                                        />
        </PasswordBox.Background>

    </PasswordBox>
</UserControl>
